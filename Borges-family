    // ------------------ RENDERING ------------------
    const root = document.getElementById('root');

    // Utility: make an element
    const el = (tag, attrs = {}, children = []) => {
      const e = document.createElement(tag);
      for (const [k,v] of Object.entries(attrs)) {
        if (k === 'class') e.className = v;
        else if (k === 'html') e.innerHTML = v;
        else e.setAttribute(k,v);
      }
      for (const c of [].concat(children)) {
        if (typeof c === 'string') e.appendChild(document.createTextNode(c));
        else if (c) e.appendChild(c);
      }
      return e;
    };

    const badgeMemoriam = () => el('span', {class:'memoriam'}, 'IN MEMORIAM');

    function personRow(node){
      const row = el('div', {class:'row'});
      const left = el('div');

      const who = el('div', {class:'who'});
      who.append(
        el('span', {class:'bullet'}),
        el('span', {class:'name'}, node.name)
      );
      if (node.spouse) {
        who.append(el('span', {class:'spouse'}, ' & ' + node.spouse));
      }
      if (node.status === 'in memoriam') who.append(badgeMemoriam());
      if (node.spouseStatus === 'in memoriam') {
        who.append(el('span', {class:'memoriam', style:'margin-left:6px'}, '(cônjuge)'));
      }
      left.append(who);

      const right = el('div');
      // grandchildren list (if this node has children -> show as comma list)
      if (Array.isArray(node.children) && node.children.length > 0) {
        const kidsNames = [];
        node.children.forEach(c => {
          if (c.spouse) kidsNames.push(`${c.name} & ${c.spouse}`);
          else kidsNames.push(c.name);
        });
        right.append(el('div', {class:'kids'}, kidsNames.join(', ')));
      } else {
        right.append(el('div', {class:'muted small'}, '—'));
      }

      row.append(left, right);

      // deeper levels
      if (Array.isArray(node.children) && node.children.length > 0) {
        const indent = el('div', {class:'indent'});
        node.children.forEach(c => {
          // render child “leaf” with their children listed on right
          indent.appendChild(personRowLeaf(c));
        });
        row.appendChild(indent);
      }

      return row;
    }

    function personRowLeaf(node){
      const row = el('div', {class:'row'});
      const left = el('div');

      const who = el('div', {class:'who'});
      who.append(el('span', {class:'bullet'}), el('span', {class:'name'}, node.name));
      if (node.spouse) who.append(el('span', {class:'spouse'}, ' & ' + node.spouse));
      if (node.type === 'partner-group') who.append(el('span', {class:'partner'}, 'Partner line'));
      if (node.status === 'in memoriam') who.append(badgeMemoriam());
      if (node.spouseStatus === 'in memoriam') {
        who.append(el('span', {class:'memoriam', style:'margin-left:6px'}, '(cônjuge)'));
      }
      left.append(who);

      const right = el('div');
      if (Array.isArray(node.children) && node.children.length > 0) {
        const gkids = [];
        node.children.forEach(gc => {
          if (gc.children && gc.children.length > 0){
            const gg = gc.children.map(x => x.name).join(', ');
            if (gc.spouse) gkids.push(`${gc.name} & ${gc.spouse} — ${gg}`);
            else gkids.push(`${gc.name} — ${gg}`);
          } else {
            if (gc.spouse) gkids.push(`${gc.name} & ${gc.spouse}`);
            else gkids.push(gc.name);
          }
        });
        right.append(el('div', {class:'kids'}, gkids.join('; ')));
      } else {
        right.append(el('div', {class:'muted small'}, '—'));
      }

      row.append(left, right);
      return row;
    }

    function sectionFor(branch){
      const d = el('details', {class:'section'});
      const s = el('summary', {}, [
        branch.name,
        branch.spouse ? el('span',{class:'spouse'}, ' & ' + branch.spouse) : null,
        (branch.status === 'in memoriam') ? badgeMemoriam() : null,
        (branch.spouseStatus === 'in memoriam') ? el('span',{class:'memoriam',style:'margin-left:6px'},'(cônjuge)') : null,
        el('span', {class:'meta'}, Array.isArray(branch.children) ? `${branch.children.length} filhos` : '0 filhos')
      ]);
      const body = el('div', {class:'body'});

      if (Array.isArray(branch.children) && branch.children.length > 0) {
        branch.children.forEach(ch => body.appendChild(personRow(ch)));
      } else {
        body.append(el('div', {class:'muted'}, 'Sem registros de filhos.'));
      }

      d.append(s, body);
      return d;
    }

    function render(){
      root.innerHTML = '';
      // Show each top-level branch as a collapsible section
      FAMILY_DATA.children.forEach(b => root.appendChild(sectionFor(b)));
    }

    render();

    // ------------------ SEARCH ------------------
    const search = document.getElementById('search');

    function normalize(s){ return (s||'').toLowerCase(); }

    function searchOpen(term){
      const t = normalize(term);
      const sections = [...root.querySelectorAll('.section')];
      sections.forEach(sec => {
        // close by default
        sec.open = false;
        sec.classList.remove('highlight');
        // remove previous highlights
        sec.querySelectorAll('.row,.who').forEach(n => n.classList.remove('highlight'));
      });
      if (!t) return;

      // simple text match: if a section contains the text, open and highlight matches
      sections.forEach(sec => {
        const has = normalize(sec.innerText).includes(t);
        if (has){
          sec.open = true;
          // highlight rows containing the match
          sec.querySelectorAll('.row,.who').forEach(n => {
            if (normalize(n.innerText).includes(t)) n.classList.add('highlight');
          });
          // slight section highlight
          sec.classList.add('highlight');
        }
      });
    }

    search.addEventListener('input', e => searchOpen(e.target.value));

    // Open first two sections by default for quicker mobile view
    const first = root.querySelectorAll('.section');
    if (first[0]) first[0].open = true;
    if (first[1]) first[1].open = true;

    // Small iOS hint for install
    if (/iPhone|iPad|iPod/.test(navigator.userAgent)){
      console.log('Tip: In Safari, Share → Add to Home Screen for an app-like icon.');
    }
  </script>
</body>
</html>
